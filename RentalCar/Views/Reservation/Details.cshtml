@{
    ViewData["Title"] = "Reservation Detail";
}
@model Models.Reservation;
<div class="row">
    <div class="col-md-5">
        <div class="bg-gray-100 w-full mt-5 backgroundImg"
            style="background-image:url('@Model.Vehicle.Image'); background-position: center; background-repeat: no-repeat; background-size: cover; height:26rem;">
        </div>
    </div>
    <div class="col-md-7 mt-5">
        <div class="p-4 border-b">
            <h2 class="text-2xl ">
                Reservation Information
            </h2>
            <p class="text-sm text-gray-500">
                Reservation details and vehicle information.
            </p>
        </div>
        <div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600">
                    Reserved by
                </p>
                <p>
                    @Model.User.Name
                </p>
            </div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600">
                    Reserved Date
                </p>
                <p>
                    @Model.ReservedFrom.ToString("dd/MM/yyyy hh:mm") - @Model.ReservedTo.ToString("dd/MM/yyyy hh:mm")
                </p>
            </div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600">
                    Vehicle
                </p>
                <p>
                    @Model.Vehicle.Mark @Model.Vehicle.Name
                </p>
            </div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600">
                    Total
                </p>
                @{
                    var total = @Model.Vehicle.Price * @Model.NumberOfDays;
                }
                <p>
                    @total &euro;
                </p>
            </div>
        </div>
    </div>
</div>